{
  "models": [
    {
      "name": "user",
      "attrs": [
        {
          "name": "teams",
          "type": "team[]",
          "is_fk": true,
          "card": {
            "ref": "0..*",
            "has": "0..*"
          },
          "write": true,
          "description": "User team preferences"
        }
      ],
      "description": "Represents a registered user"
    },
    {
      "name": "team",
      "attrs": [
        {
          "name": "name",
          "type": "string",
          "length": "256"
        },
        {
          "name": "logo",
          "type": "image",
          "length": "512"
        },
        {
          "name": "description",
          "type": "text",
          "default": "No description available"
        },
        {
          "name": "market_value",
          "type": "float",
          "description": "Market value of the team in USD"
        },
        {
          "name": "rival",
          "type": "team",
          "is_fk": true,
          "card": {
            "ref": "1",
            "has": "0..*"
          },
          "empty": true,
          "description": "Team's biggest rival"
        },
        {
          "name": "identity_docs",
          "type": "file[]",
          "write": false,
          "description": "Documents to indentify the team (constitutive act, registration, etc.)"
        },
        {
          "name": "players",
          "type": "player[]",
          "is_fk": true,
          "card": {
            "ref": "0..*",
            "has": "1"
          },
          "write": false,
          "description": "Players of the team (roaster)"
        }
      ]
    },
    {
      "name": "player",
      "attrs": [
        {
          "name": "name",
          "type": "string",
          "length": "256"
        },
        {
          "name": "photo",
          "type": "image",
          "length": "512"
        },
        {
          "name": "is_active",
          "type": "boolean",
          "default": "true",
          "description": "Indicates whether the player is active or retired"
        },
        {
          "name": "team",
          "type": "team",
          "is_fk": true,
          "card": {
            "ref": "1",
            "has": "0..*"
          }
        },
        {
          "name": "position",
          "type": "player_position",
          "is_fk": true,
          "card": {
            "ref": "1",
            "has": "0..*"
          }
        }
      ]
    },
    {
      "name": "match",
      "attrs": [
        {
          "name": "date",
          "type": "date",
          "default": "now"
        },
        {
          "name": "type",
          "type": "enum",
          "options": [
            "Friendship",
            "League",
            "Cup"
          ],
          "description": "Match type (eg. cup)"
        },
        {
          "name": "local",
          "type": "team",
          "is_fk": true,
          "card": {
            "ref": "1",
            "has": "0..*"
          }
        },
        {
          "name": "visitor",
          "type": "team",
          "is_fk": true,
          "card": {
            "ref": "1",
            "has": "0..*"
          }
        },
        {
          "name": "scores",
          "type": "score[]",
          "is_fk": true,
          "card": {
            "ref": "0..*",
            "has": "1"
          },
          "write": false
        }
      ],
      "description": "Represents a match between two teams  (A vs B)"
    },
    {
      "name": "score",
      "attrs": [
        {
          "name": "min",
          "type": "int",
          "description": "Minute of the goal"
        },
        {
          "name": "player",
          "type": "player",
          "is_fk": true,
          "card": {
            "ref": "1",
            "has": "0..*"
          },
          "description": "Player that score"
        },
        {
          "name": "match",
          "type": "match",
          "is_fk": true,
          "card": {
            "ref": "1",
            "has": "0..*"
          }
        }
      ],
      "description": "Represents a match score (goal)"
    },
    {
      "name": "player_position",
      "attrs": [
        {
          "name": "name",
          "type": "string",
          "length": "256"
        }
      ],
      "description": "Represents a player  position (eg. forward)"
    }
  ],
  "platform": "reactjs",
  "export": {}
}